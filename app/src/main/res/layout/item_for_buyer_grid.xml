<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:background="@color/black"
    android:paddingRight=".2dp"
    android:paddingBottom="0.2dp"
    android:orientation="vertical">


    <RelativeLayout
        android:paddingLeft="20dp"
        android:background="@color/white"
        android:id="@+id/relativeLayout_onclick"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:src="@drawable/phone"
            android:id="@+id/iv_product_buyer"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true" />


        <TextView
            android:id="@+id/tv_productName_buyer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_product_buyer"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="Productname"
            android:textColor="@android:color/black" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_productName_buyer"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/tv_price_buyer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Productname"
                android:textColor="@android:color/black" />

            <SeekBar
                android:id="@+id/seekBar_buyer"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:max="100"
                android:progress="50"
                android:progressDrawable="@drawable/progress_drawable"
                android:thumb="@null" />
        </RelativeLayout>


    </RelativeLayout>


</LinearLayout>