<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.example.administrator.hackathon.com.hackathon.SplashActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="25dp">

    <Button
        android:visibility="gone"
        android:onClick="buyerOnClick"
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buyer" />

    <TextView
        android:layout_margin="20dp"
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/redorange"
        android:layout_height="wrap_content"
        android:text="Welcome to eCommerce" />

    <Button
        android:visibility="gone"
        android:onClick="sellerOnClick"
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seller"
        tools:layout_editor_absoluteX="137dp"
        tools:layout_editor_absoluteY="333dp" />

    <ProgressBar
        android:layout_marginTop="150dp"
        android:layout_width="50dp"
        android:layout_height="50dp" />

</LinearLayout>
